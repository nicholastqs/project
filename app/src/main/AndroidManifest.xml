<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nicholas.cinebox">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".signUp" />
        <activity android:name=".signIn" />
        <activity android:name=".successful" />
        <activity android:name=".Home" />
        <activity android:name=".Deadpool2"
            android:label="Deadpool 2"/>
        <activity
            android:name=".Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme" />
        <activity android:name=".JurassicWorld"
            android:label="Jurassic World: Fallen Kingdom"/>
        <activity android:name=".Avengers"
            android:label="Avengers: Infinity War"/>
        <activity android:name=".Thor"
            android:label="Thor: Ragnarok"/>
        <activity android:name=".Incredibles2"
            android:label="Incredibles 2"/>
        <activity android:name=".Kingsman"
            android:label="Kingsman: The Golden Circle"/>
    </application>

</manifest>