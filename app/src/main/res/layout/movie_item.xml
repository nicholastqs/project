<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    android:elevation="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_4sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/movie_img"
            android:layout_width="@dimen/_118sdp"
            android:layout_height="@dimen/_155sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:scaleType="fitXY"
            android:src="@drawable/incredibles" />

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/movie_img"
            android:layout_toRightOf="@id/movie_img"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Incredibles" />

        <TextView
            android:id="@+id/movie_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_title"
            android:layout_toEndOf="@id/movie_img"
            android:layout_toRightOf="@id/movie_img"
            android:textSize="16sp"
            tools:text="Animation | Action | Adventure" />

        <TextView
            android:id="@+id/movie_pg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/movie_title"
            android:layout_below="@+id/movie_genre"
            android:textSize="16sp"
            tools:text="PG | Rating: 8.3/10" />

        <TextView
            android:id="@+id/movie_description"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/movie_img"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:maxLines="3"
            tools:text="Elastigirl springs into action to save the day, while Mr. Incredible faces his greatest challenge yet - taking care of the problems of his three children." />
    </RelativeLayout>

</android.support.v7.widget.CardView>